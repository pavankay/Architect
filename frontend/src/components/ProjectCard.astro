---
export interface Props {
  id: string;
  name: string;
  description: string;
  createdAt: string;
}

const { id, name, description, createdAt } = Astro.props;
const formattedDate = new Date(createdAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---

<a href={`/project/${id}`} class="project-card">
  <div class="project-header">
    <h3 class="font-antikor-title text-lg mb-3 leading-tight">{name}</h3>
    <div class="project-meta">
      <time class="font-mono text-xs opacity-60">{formattedDate}</time>
      <div class="project-arrow">â†’</div>
    </div>
  </div>
  <div class="project-status">
    <div class="status-dot"></div>
    <span class="font-mono text-xs opacity-60">Active</span>
  </div>
</a>

<style>
  .project-card {
    display: block;
    padding: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    margin-bottom: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    color: inherit;
    background: rgba(255, 255, 255, 0.02);
    position: relative;
    overflow: hidden;
  }


  .project-card:focus {
    background-color: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .project-header {
    margin-bottom: 1rem;
  }

  .project-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .project-arrow {
    font-mono: true;
    font-size: 1rem;
    opacity: 0.4;
    transition: all 0.3s ease;
    transform: translateX(0);
  }


  .project-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .status-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: rgba(34, 197, 94, 0.8);
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>